{% extends '@layout/default.html.twig' %} {# para concatenar no twig usa o ~ #}
{% block title %}Novo contato - {{ parent() }}{% endblock %}
{% block content %}
    {% set name = form.get('name') %}
    {% do name.setAtribute('class','form-control') %}

    {% set email = form.get('email') %}
    {% do email.setAtribute('class','form-control') %}

    {% set submit = form.get('submit') %}
    {% do
        email.setAtribute('class','form-control')
             .setLabel('Incluir')
    %}
    <div class="row">
        <div class="col-md-8">
            <div class="box box-primary">
                <div class="box-body">
                   {{ form(form)}}
                    <form name="form" role="form" action="{{ url('customer.create') }}" method="post">
                        <div class="box-body">
                            <div class="form-group">
                                <label for="name">Nome:</label>
                                <input type="text" class="form-control" name="name">
                            </div>
                            <div class="form-group">
                                <label for="email">Email:</label>
                                <input type="email" class="form-control" name="email" required="required">
                            </div>
                        </div>
                        <div class="box-footer">
                            <button class="btn btn-primary" type="submit">Incluir</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block page_header %}
    Novo Contato
{% endblock %}